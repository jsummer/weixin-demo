/**index.wxss**/
.header{
  width: 100%;
  padding: 15px;
  background: url(http://vt.tyzyz.org/img/time_bg.jpg)
}

.entries{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
}
.entry{
  position: relative;
  width: 25%;
  padding-bottom: 25%;
  border-radius: 50%;
  background-color: #fff;
}
.entry .text{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
